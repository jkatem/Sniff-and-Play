<% if logged_in? && (@dog.user == current_user) %> 

<h1> List of photos of <%= @dog.name %> </h1>
<ul>
  <% @photos.each do |photo| %>
    <li>
      <div>
        <% if photo.image_file.attached? %>
          <span style="color:#1c87c9"><%= photo.caption %></span> </p>
          <%= image_tag(photo.image_file, width: 128) %>
          <br>
          </li>
            <div> 
              <% comments = photo.comments %>
              <% if comments.count > 0 %>
                <% comments.each do |c| %>
                  <%= c.content %>
                  <br>
                <% end %>
              <% else %>
                "No Comment"
              <% end %>
            </div>
          </li>
          <%=form_with model: Comment.new, url: photo_comments_path(photo) do |f|%>
            <h5>Enter your comment below â†“</h5>
            <strong><%=f.text_field :content, placeholder: "type your comment on this line"%> </strong>

              <%= f.submit "comment" %>
            <% end %>
        <% else %>
            "No Photo"
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
<br>
<% if @dog.photos.count < 5 %>
  <%= link_to "Add More Photo", new_dog_photo_path(@dog) %> 
<% end %>  
<br> 
<%= link_to "Done", dog_path(@dog) %> 
<br>
<br>
<br>


<% else%> 
    <h1>not your page</h1>
<%end %>



